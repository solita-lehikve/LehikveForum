@model Topic

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row" pb-2>
            <h2 class="text-primary">Edit Topic</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Header"></label>
            <input asp-for="Header" class="form-control" />
            <span asp-validation-for="Header" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="DiscussionForum" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
